<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border"
        >
        <ImageView
            android:id="@+id/recipeitemIvRecipeImg"
            style="@style/RecipeItemImageView"
            />
        <TextView
            android:id="@+id/recipeitemTvRecipeUser"
            style="@style/RecipeItemTextViewUser"
            android:layout_below="@id/recipeitemIvRecipeImg"
            />

        <TextView
            android:id="@+id/recipeitemTvRecipeName"
            style="@style/RecipeItemTextViewTitle"
            android:text=""
             />

        <TextView
                android:id="@+id/recipeitemTvRecipeTagTitle"
                style="@style/RecipeItemTextViewTitle"
                android:text="@string/rTagTitle"
                 />

        <TextView
                android:id="@+id/recipeitemTvRecipeTag"
                style="@style/RecipeItemTextViewValue"
                android:text="" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/recipeitemTvRecipeLikes"
                style="@style/RecipeItemTextViewLike"
                android:text="0" />
            <ImageView
                android:id="@+id/recipeitemIvAction"
                style="@style/RecipeItemImageViewRead"
                />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>